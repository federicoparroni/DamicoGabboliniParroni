<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gabdampar.travlendar">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPageActivity"
            android:label="@string/main_page_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AppointmentsListActivity"
            android:label="pippo" />
        <activity
            android:name=".AppointmentCreationActivity"
            android:label="Appointment Creation"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SettingStartingTimeActivity" />
        <activity android:name=".SettingTimeSlotActivity" />
        <activity
            android:name=".AddConstraintOnAppointmentActivity"
            android:label="Select a travel mean to deactivate"/>


    </application>

</manifest>